<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/indigo_600</item>
        <item name="colorPrimaryDark">@color/indigo_500</item>
        <item name="colorAccent">@color/green_200</item>
    </style>


    <style name="tab_design_animator">
        <item name="android:background">@color/white</item>
        <item name="pDividerColor">@color/transparent</item>
        <item name="pDividerPadding">0dp</item>
        <item name="pTabPaddingLeftRight">0dp</item>
        <item name="pShouldExpand">true</item>
        <item name="pIndicatorColor">@color/indigo_500</item>
        <item name="pIndicatorHeight">1dp</item>
    </style>

</resources>
