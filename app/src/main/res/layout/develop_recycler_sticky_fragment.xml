<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:auto="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_recycler_sticky_develop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.afree.canary.widget.bar.IndexScroller
        android:id="@+id/index_scroller_city_list"
        android:layout_width="@dimen/dp_30"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        auto:barBackgroundColor="#88a3a3a3"
        auto:barTextColor="@color/c3"
        auto:barTextColorHover="@color/black"
        auto:barTextSize="@dimen/dp_15"/>

    <TextView
        android:id="@+id/tv_float_letter_sticky_recycler"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@color/c2"
        android:gravity="center"
        android:textColor="@color/c1"
        android:textSize="@dimen/dp_40"
        android:visibility="gone"/>
</RelativeLayout>